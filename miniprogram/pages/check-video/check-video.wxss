/* pages/check-video/check-video.wxss */
page{
  width: 100%;
}


.detail .title-block{
  padding: 32rpx 16rpx;
  border-bottom: 1px solid #F4F4F4;
}

.detail .title-block .subTitle{
  font-size: 10pt;
  color: gray;
  margin-top: 16rpx;
}

.detail .content-block{
  padding: 32rpx 16rpx;
  font-size: 12pt;
}

.detail .content-block image{
  width: 100%;
  height: 600rpx;
  margin-top: 16rpx;
}

.detail .video-block{
  width: 100%;
  height: 512rpx;
  margin-top: 16rpx;
}

.detail .htext{
  margin-top: 16rpx;
  font-size: 11pt;
  color: green;
}

.back-btn-huge{
  width: 256rpx;
  height: 80rpx;
  margin-top: 32rpx;
  font-size: 13pt;
  border-radius: 8rpx;
  background: #fff;
  border: gray 1px solid;
  color: gray;
}

.listBlock{
  padding: 16rpx;
  font-size: 12pt;
  height: 128rpx;
  border-bottom: #F9F9F9 1px solid;
}

.listBlock .tips{
  font-size: 10pt;
  color: green;
}

.listBlock .btn{
  margin-left: 16rpx;
  padding: 16rpx;
  color: #747474;
  border-radius: 16rpx;
  border: #747474 1px solid;
}

.listBlock .title{
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.greyTips{
  font-size: 12pt; 
  color: grey; 
  margin: 32rpx 0;
}

.list .title{
  width: 100%;
  height: 84rpx;
  font-size: 13pt;
  padding: 0 16rpx;
  background: #fff;
  margin-bottom: 1px;
}

.list .content{
  height: 212rpx;
  padding: 16rpx;
  background: #fff;
  margin-bottom: 1px;
}

.list .content .s-icon{
  width: 180rpx;
  height: 180rpx;
  margin-right: 16rpx;
}

.list .content .sub-title{
  height: 100rpx;
  font-size: 12pt;
}

.list .content .sub-content{
  height: 152rpx;
  margin-top: 16rpx;
  font-size: 11pt;
  color: #aaa;
}

.list .content .date{
  color: #aaa;
  font-size: 13pt;
  margin-top: 16rpx;
}

.swiper-tab{
  width: 100%;
  background: white;
  border-bottom: 2rpx solid #ccc;
  text-align: center;
  height: 88rpx;
  line-height: 88rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
  position: fixed;
}
.swiper-tab-item{
  width: 30%; 
  color:#434343;
}
.active{
  color:#F65959;
  border-bottom: 4rpx solid #F65959;
}
swiper{
 text-align: center;
}