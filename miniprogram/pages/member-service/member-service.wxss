/* pages/edu/edu.wxss */

page {
  background: #F9F9F9;
}

.banner {
  width: 100%;
  height: 320rpx;
}

.banner navigator {
  font-size: 0;
  position: relative;
  height: 100%;
}

.banner .slide-image {
  width: 100%;
  height: 100%;
}

.grid-edu{
  height: 200rpx;
  width: 100%;
  margin: 1px 0;
  background: #fff;
}

.g-icon{
  width: 84rpx;
  height: 84rpx;
}

.text{
  font-size: 9pt;
  margin-top: 16rpx;
}

.grid-edu-title{
  width: 100%;
  height: 84rpx;
  font-size: 13pt;
  padding: 0 16rpx;
  background: #fff;
}

.study-list .title{
  width: 100%;
  height: 84rpx;
  font-size: 13pt;
  padding: 0 16rpx;
  background: #fff;
  margin-bottom: 1px;
}

.study-list .content{
  padding: 16rpx;
  background: #fff;
  margin-bottom: 1px;
}


.study-list .content .s-icon{
  width: 220rpx;
  height: 220rpx;
  margin-right: 16rpx;
}

.study-list .content .sub-title{
  font-size: 13pt;
  margin-left: 16rpx;
  margin-bottom: 16rpx;
}

.study-list .content .sub-content{
  font-size: 11pt;
  margin-left: 16rpx;
  color: #aaa;
}

.father-list{
  width:100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  background: white;
  padding-bottom: 32rpx;
}
 
 
/*子元素-子盒子*/
 
.son-item{
  width:32%;
  display:flex;
  flex-direction: column;
  align-items: center;
  background-color: #fff;
  border-radius:10rpx;
  margin-top:24rpx;
}
 
/*子盒子不是第3n个的*/
 
.son-item:not(:nth-child(3n)){
  margin-right: 2%;
}