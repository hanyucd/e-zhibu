/* pages/post-tp/post-tp.wxss */
@import "./assets/weui.wxss";
@import "./assets/iconfont.wxss";

page {
    width: 100%;
    padding: 16rpx;
    background: #f9f9f9;
}

.picker {
    height: 76rpx;
    background: #fff;
    padding: 8rpx 16rpx;
    text-align: center;
    font-size: 12pt;
    color: #676767;
    margin-top: 16rpx;
}

.tp-block textarea {
    width: 100%;
    height: 512rpx;
    font-size: 12pt;
    padding: 8rpx 16rpx;
    text-align: center;
    background: #fff;
    margin-bottom: 16rpx;
}

.tp-block button {
    margin-top: 64rpx;
    margin-bottom: 64rpx;
}

.uploadImg {
    width: 200rpx;
    height: 200rpx;
}

.uploadImgBlock {
    width: 100%;
    white-space: nowrap;
    margin-top: 32rpx;
}

.uploadImgBlock .subBlock {
    width: 200rpx;
    height: 200rpx;
    position: relative;
    display: inline-block;
    margin-right: 16rpx;
}

.uploadImgBlock .delete {
    right: 0;
    width: 48rpx;
    height: 48rpx;
    opacity: 0.7;
    position: absolute;
    margin: 4rpx 4rpx 0 0;
}

.cancel-mask {
    background: black;
}

.wrapper {
    padding: 5px;
}

.iconfont {
    display: inline-block;
    padding: 6px 6px;
    width: 24px;
    height: 24px;
    cursor: pointer;
    font-size: 20px;
}

.toolbar {
    box-sizing: border-box;
    /* border: 1px solid #ccc; */
    border-bottom: 0;
    font-family: 'Helvetica Neue', 'Helvetica', 'Arial', sans-serif;
}

.ql-container {
    box-sizing: border-box;
    padding: 16rpx;
    width: 100%;
    min-height: 40vh;
    height: auto;
    /* border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc; */
    background: #fff;
    margin-top: 20px;
    font-size: 16px;
    line-height: 1.5;
}

.ql-active {
    color: #06c;
}

.oname{
  height: 76rpx;
  padding: 16rpx;
  font-size: 12pt;
  text-align: center;
  background: #fff;
  border-radius: 8rpx;
  margin-top: 16rpx;
}
