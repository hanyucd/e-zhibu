/* pages/post-tp/post-tp.wxss */
page {
  width: 100%;
  padding: 32rpx;
  background: #F9F9F9;
}

.tp-block textarea{
  width: 100%;
  height: 512rpx;
  font-size: 12pt;
  padding: 8rpx 16rpx;
  text-align: center;
  background: #fff;
  margin-bottom: 16rpx;
}

.tp-block button{
  margin-top: 64rpx;
}

.uploadImg{
  width: 200rpx;
  height: 200rpx;
}

.uploadImgBlock{
  width: 100%;
  white-space: nowrap;
  margin-top: 32rpx;
}

.uploadImgBlock .subBlock{
  width: 200rpx;
  height: 200rpx;
  position: relative;
  display: inline-block;
  margin-right: 16rpx;
}

.uploadImgBlock .delete{
  right: 0;
  width: 48rpx;
  height: 48rpx;
  opacity: 0.7;
  position: absolute;
  margin: 4rpx 4rpx 0 0;
}

.cancel-mask{
  background: black;
}